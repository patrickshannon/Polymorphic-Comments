<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>

<% unless @comments.empty? %>
	<%= comments @comments %>
<% else %>
	<h3>No comments!</h3>
<% end %>

<%= render 'comments/form' %>

<%= link_to 'Leave Comment', new_article_comment_path(@article) %>



<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
