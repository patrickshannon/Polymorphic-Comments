<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @blog.title %>
</p>

<p>
  <b>Body:</b>
  <%= @blog.body %>
</p>

<% unless @comments.empty? %>
	<%= comments @comments %>
<% else %>
	<h3>No comments!</h3>
<% end %>

<%= link_to 'Leave Comment', new_blog_comment_path(@blog) %>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
